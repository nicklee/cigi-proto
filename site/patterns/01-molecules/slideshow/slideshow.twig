
<div class="slideshow">
    <div class="slideshow__container glide js-slideshow">

        <div class="slideshow__header">
            <h2 class="slideshow__heading">{{ title }}</h3>
        </div>

        <div class="slideshow__content glide__track" data-glide-el="track">
            <div class="slideshow__slides glide__slides">
                {% for slides in items %}
                <div class="slideshow__slide glide__slide js-slide-in">
                    {% include "@atoms/slideshow-item/slideshow-item.twig" with slides %}
                </div>
                {% endfor %}
            </div>
        </div>

        <div class="slideshow__controls glide__arrows" data-glide-el="controls">
            <button aria-label="Previous" class="slideshow__arrow slideshow__arrow--prev glide__arrow glide__arrow--left" data-glide-dir="<">
                <svg class="slideshow__arrow-icon" width="24" height="24">
                    <use xlink:href="#arrow-left" />
                </svg>
            </button>
            <button aria-label="Next" class="slideshow__arrow slideshow__arrow--next glide__arrow glide__arrow--right" data-glide-dir=">">
                <svg class="slideshow__arrow-icon" width="24" height="24">
                    <use xlink:href="#arrow-right" />
                </svg>
            </button>
        </div>

    </div>
</div> <!-- /slideshow -->
